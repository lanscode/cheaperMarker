@model CheaperMarket.Models.ProduitViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.user.UserType == "Fournisseur")
{
<p><a href="/Approvisionnements/Create/@Model.Produit.id"><b>Approvisionner</b> </a>ce produit</p>
}
<div>
   
    <hr />
    <p>Détails Produit</p>
    <div class="jumbotron">   
        <h5 class="lead">les produits de cheapMarket ont une garantie de 2 sémaines avec possibité d'échanger ou de retourner votre produit en cas de disfonctionnement, et 1 an de garantit pour réparation gratuite en cas de problème</h5><hr /><br />
        <p><img class="min img-fluid " style="width:100%;height:100%" src="~/Content/img/@ViewData["nom"]" alt=""></p>
    </div>
    <div class="row">
        <div class="col-3"><b>Label:</b> </div>
        <div class="col-3">@Html.DisplayFor(model => model.Produit.label)</div> |
        <div class="col-2"><b>Catégorie:</b> </div>
        <div class="col-3">@Html.DisplayFor(model => model.Produit.categorie)</div>
    </div>
   
    <div class="row">
        <div class="col-3"><b>Quantité en stock :</b> </div>
        <div class="col-3">@Html.DisplayFor(model => model.Produit.quantite)</div> |
        <div class="col-2"><b>Prix Unitaire:</b> </div>
        <div class="col-3">@Html.DisplayFor(model => model.Produit.prix)</div>
    </div>
   
   <br />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Produit.description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Produit.description)
        </dd>

       

    </dl>
</div>
<p>
    
    <a class="btn btn-default" href="/Commandes/Create/@Model.Produit.id" style="margin-right:5px;">Commander &raquo;</a>
    <a class="btn btn-default" href="/Home/Index">Voir Tous &raquo;</a>     
</p>
