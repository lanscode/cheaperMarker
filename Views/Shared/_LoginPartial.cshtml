@using Microsoft.AspNet.Identity
@using CheaperMarket.Models
@if (Request.IsAuthenticated)
            {
      
       
    
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
                    @Html.AntiForgeryToken()

                    <ul class="nav  navbar-nav navbar-right" >
        <li class="nav-item" >
         
            @Html.ActionLink("Welcome "+User.Identity.Name, "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>    
        <li class="nav-item" style="margin-left:15px;margin-right:-5px;"><a href="javascript:document.getElementById('logoutForm').submit()">Se déconnecter</a></li>
    </ul>
               }
           }
else
{
    <ul class="nav navbar-nav navbar-right" >
        <li class="nav-item">@Html.ActionLink("S’inscrire", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li class="divider"></li>
        <li class="nav-item" style="margin-left:15px;margin-right:-5px;" >@Html.ActionLink("Se connecter", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
