@using CheaperMarket.Models
@{
    ViewBag.Title = "AnyProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>Le stock de produit est épuisé</h4><br />
@if (Request.IsAuthenticated)
{
    UserDal dal = new UserDal();
    UserInstance user = dal.findByUserName(User.Identity.Name);
    if (user.UserType == "Admin")
    {
        <p>Il n'ya pas de produit disponible veillez Contacter un Fournisseur <a href="/Contacts/Fournisseur"><b>ici</b></a>!<br />
            Ou bien Ajouter des produits Vous même en cliquant <a href="/Produits/Create"><b>ici</b></a></p>

    }
    else
    {
       <p> Nous sommes désolé mais cette page n'est pas disponible pour l'instant</p>
    }
}else
{
  <p>Vous devez vous connecter pour ajouter des produits</p>
}




